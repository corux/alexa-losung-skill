{
  "name": "alexa-losung-skill",
  "version": "1.0.0",
  "description": "Alexa losung skill",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "pretest": "npm run build:prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "build": "webpack --config webpack.config.ts --require ts-node/register",
    "build:dev": "npm run build -- --mode development --watch",
    "build:prod": "npm run lint && npm run build -- --mode production",
    "download-losungen": "ts-node ./bin/download-losungen.ts --destination ./assets/",
    "convert-assets": "rsvg-convert -w 108 -o assets/icon108.png assets/icon.svg && rsvg-convert -w 512 -o assets/icon512.png assets/icon.svg",
    "create-s3-bucket": "aws s3 ls s3://alexa-losung-skill > /dev/null 2>&1 || aws s3 mb s3://alexa-losung-skill --region eu-west-1",
    "deploy:assets": "aws s3 sync ./assets s3://alexa-losung-skill/ --acl public-read",
    "deploy:prod": "serverless deploy --stage production",
    "deploy:skills": "ask deploy"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.26",
    "@types/jest": "24.0.13",
    "@types/node": "10.14.1",
    "ask-cli": "1.7.2",
    "ask-sdk-core": "2.5.2",
    "ask-sdk-model": "1.15.1",
    "commander": "2.20.0",
    "fast-xml-parser": "3.12.16",
    "jest": "24.8.0",
    "jest-raw-loader": "1.0.1",
    "raw-loader": "2.0.0",
    "serverless": "1.43.0",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.1",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "typescript": "3.4.5",
    "virtual-alexa": "0.7.2",
    "unzipper": "0.9.15",
    "webpack": "4.32.0",
    "webpack-command": "0.4.2"
  }
}
